{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "target": "es2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "paths": {
    "@/*": ["src/*"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"]
}
